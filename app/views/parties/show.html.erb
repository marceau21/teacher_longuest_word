<div class="container py-5 text-center  ">
  <div class="d-flex justify-content-between color-white font-bold">
    <div class="">
      <p>Nbr de parties : <%= @game.parties.length %>
      </p>
      <p>Nbr de mots restants : <%= (5 - @game.parties.length) %>
      </p>
    </div>
    <div class="text-right">
      <p>Meilleur score : <%= current_user.best_score %>
      </p>
      <p>Score actuel : <%= @score %>
      </p>
    </div>
  </div>

  <div class="d-flex justify-content-center flex-wrap pb-5">
    <div class="d-flex justify-content-center">
      <% @party.ten_letters_list.chars.first(5).each do |letter| %>
        <div class="letter-card text-shadow">
          <%= letter %>
        </div>
        <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <% @party.ten_letters_list.chars.last(5).each do |letter| %>
        <div class="letter-card text-shadow">
          <%= letter %>
        </div>
        <% end %>
    </div>
  </div>

  <h2>
    <%= @party.word %>
  </h2>

  <div class="card p-3 mt-3 bdr-16">
    <h3 class="font-bold color-blue">Les 10 meilleures r√©ponses :</h3>
    <div class="d-flex justify-content-around">
      <div>
        <% @party.solutions.first(5).each do |solution| %>
          <div class="font-bold p-1">
            <%= solution.word %>
          </div>
          <% end %>
      </div>
      <div>
        <% @party.solutions.last(5).each do |solution| %>
          <div class="font-bold p-1">
            <%= solution.word %>
          </div>
          <% end %>
      </div>
    </div>
  </div>

  <div class="pt-3">
    <%= link_to "Rejouer" , root_path, class: 'btn' %>
  </div>

</div>
